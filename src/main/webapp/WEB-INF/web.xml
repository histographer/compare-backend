<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Pat or Nat Backend</display-name>
<!--  Config for database -->
  <context-param>
    <param-name>MONGODB_HOST</param-name>
    <param-value>localhost</param-value>
  </context-param>
  <context-param>
    <param-name>MONGODB_PORT</param-name>
    <param-value>27017</param-value>
  </context-param>
  <context-param>
    <param-name>MONGODB_USERNAME</param-name>
    <param-value>user</param-value>
  </context-param>
  <context-param>
    <param-name>MONGODB_PASSWORD</param-name>
    <param-value>secret</param-value>
  </context-param>
  <context-param>
    <param-name>MONGODB_DATABASE</param-name>
    <param-value>users</param-value>
  </context-param>
<!--    End config database -->

</web-app>
